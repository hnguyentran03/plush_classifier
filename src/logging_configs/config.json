{
  "version": 1,
  "disable_existing_loggers": false,
  "filters": {
    "non_error": {
      "()": "logging_configs.mylogger.NonErrorFilter"
    }
  },
  "formatters": {
    "simple": {
      "format": "%(asctime)s: %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    },
    "json": {
      "()": "logging_configs.mylogger.MyJSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout",
      "filters": ["non_error"]
    },
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "WARNING",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/get_images.log.jsonl",
      "maxBytes": 1000000,
      "backupCount": 3
    }
  },
  "loggers": {
    "root": {
      "level": "CRITICAL",
      "handlers": []
    },
    "__main__": {
      "level": "DEBUG",
      "handlers": [
        "stdout",
        "stderr",
        "file"
      ],
      "propagate": false
    }
  }
}